@model Student
@{
    ViewBag.Title = "AssignStudentToCource";
    Layout = "~/Views/Shared/_Layout.cshtml";
    SelectList CourcesList = new SelectList(ViewBag.Cources,"ID","Name");
    var StudentName = ViewBag.StudentName;
    var StudentId = ViewBag.StudentId;
}
<form asp-action="AssignStudentToCource"  asp-controller="Student" method="post">
    <div class="container"> 
        <div class="form-group m-3">
            <lable for="ID" >ID</lable>
            <input asp-for="ID" class="form-control"/>
        </div>
        <div class="form-group m-3">
            <lable for="Name"  >Name</lable>
            <input asp-for="Name" class="form-control"/>
        </div> 
        <div class="form-group m-3">
            <lable for="CourceId" >SelectCource</lable>
            <select  asp-items="CourcesList" id = "CourceId" name="CourceId" class="form-control">
            </select>
        </div>
        <div>
             <input type="submit" class="btn btn-success m-3"  value="Save" />
        </div> 
    </div>
</form>
