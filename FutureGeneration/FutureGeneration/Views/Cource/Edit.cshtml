@model CourceVM
@{
    ViewBag.Title = "EditCource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Edit" enctype="multipart/form-data" asp-controller="Cource" method="post">
    <div class="container"> 
        <div class="form-group m-3">
            <lable for="Status">Status</lable>
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<Enums.CourceStatus>()" class="form-control">
                <object slected="selected" value="@Enum.GetName(typeof(Enums.CourceStatus),Model.Status)">Please Select Cource Status....</object>
            </select>
        </div> 
        <div class="form-group m-3">
            <lable for="Capacity" >Capacity</lable>
            <input asp-for="Capacity" value="@Model.Capacity" class="form-control"/>
        </div>
        <div class="form-group m-3">
            <lable for="Cost" >Cost</lable>
            <input asp-for="Cost" value="@Model.Cost" class="form-control"/>
        </div> 
        <div class="form-group m-3">
            <lable for="StartDate" >StartDate</lable>
            <input asp-for="StartDate" value="@Model.StartDate.ToString()" class="form-control"/>
        </div>
        <div class="form-group m-3">
            <lable for="EndDate">EndDate</lable>
            <input asp-for="EndDate" value="@Model.EndDate.ToString()" class="form-control"/>
        </div> 
        <div class="form-group m-3">
            <label asp-for="CourseSyllabus" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="CourseSyllabus" value="@Model.ConvertCourseSyllabusURL" class="custom-file-input">
            </div
        </div>
        <div>
             <input type="submit" class="btn btn-success m-3"  value="Save" />
        </div> 
    </div>
</form>

